{
    "name": "aerotop",
    "version": "1.0.0",
    "description": "A high-performance skinnable system monitor with a Frutiger Aero aesthetic.",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "cross-env NODE_ENV=development electron .",
        "build:linux": "electron-builder --linux AppImage",
        "build:win": "electron-builder --win nsis",
        "build:mac": "electron-builder --mac dmg",
        "build:all": "electron-builder -wlm"
    },
    "build": {
        "appId": "com.aerotop.app",
        "productName": "Aerotop",
        "copyright": "Copyright Â© 2026 Joe George",
        "directories": {
            "output": "dist"
        },
        "linux": {
            "target": "AppImage",
            "category": "System",
            "icon": "build/icon.png"
        },
        "win": {
            "target": "nsis",
            "icon": "build/icon.png"
        },
        "mac": {
            "target": "dmg",
            "icon": "build/icon.png",
            "category": "public.app-category.utilities"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "author": "Joe George",
    "license": "MIT",
    "devDependencies": {
        "cross-env": "^10.1.0",
        "electron": "^33.0.0",
        "electron-builder": "^25.0.0"
    },
    "dependencies": {
        "systeminformation": "^5.23.0"
    }
}